    <fragment
        android:screenOrientation="portrait"
        android:id="@+id/nav_printer"
        android:name="com.app.syspoint.ui.printer.ConfigurePrinterFragment"
        android:label="@string/imprimir"
        tools:layout="@layout/activity_config_printer"/>

    <fragment
        android:screenOrientation="portrait"
        android:id="@+id/nav_ruta"
        android:name="com.app.syspoint.ui.home.HomeFragment"
        android:label="Ruta"
        tools:layout="@layout/fragment_home" />


    <fragment
        android:screenOrientation="portrait"
        android:id="@+id/nav_inventario"
        android:name="com.app.syspoint.ui.stock.StockFragment"
        android:label="Inventario"
        tools:layout="@layout/fragment_stock" />



    <fragment
        android:screenOrientation="portrait"
        android:id="@+id/nav_cobranza"
        android:name="com.app.syspoint.ui.cobranza.CobranzaFragment"
        android:label="Cobranza"
        tools:layout="@layout/fragment_cobranza" />




