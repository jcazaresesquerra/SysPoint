<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:screenOrientation="portrait"
        android:id="@+id/nav_home"
        android:name="com.app.syspoint.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:screenOrientation="portrait"
        android:id="@+id/nav_empleado"
        android:name="com.app.syspoint.ui.employees.EmployeeFragment"
        android:label="@string/menu_empleados"
        tools:layout="@layout/fragment_employee" />

    <fragment
        android:screenOrientation="portrait"
        android:id="@+id/nav_producto"
        android:name="com.app.syspoint.ui.products.ProductFragment"
        android:label="@string/menu_productos"
        tools:layout="@layout/fragment_producto" />

    <fragment
        android:screenOrientation="portrait"
        android:id="@+id/nav_cliente"
        android:name="com.app.syspoint.ui.clientes.ClienteFragment"
        android:label="@string/menu_cliente"
        tools:layout="@layout/fragment_cliente" />


    <fragment
        android:id="@+id/nav_historial"
        android:name="com.app.syspoint.ui.ventas.ListaVentasFragment"
        android:label="@string/menu_historial_ventas"
        android:screenOrientation="portrait"
        tools:layout="@layout/fragment_lista_ventas"
