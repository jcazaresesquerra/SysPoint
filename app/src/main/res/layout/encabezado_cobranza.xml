<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorBG"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:elevation="15dp"
        android:clickable="true"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView_cliente_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="CLIENTE:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_cliente_cobranza_view"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="000001"
                app:layout_constraintStart_toEndOf="@+id/textView_cliente_cobranza"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_cliente_saldo_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="SALDO:"
                app:layout_constraintStart_toEndOf="@+id/textView_cliente_cobranza_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_cliente_saldo_cobranza_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="0.00"
                app:layout_constraintStart_toEndOf="@+id/textView_cliente_saldo_cobranza"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_cliente_nombre_cobranza_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="EDUARDO GONZALEZ CASASOLA"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_cliente_cobranza" />

            <TextView
                android:id="@+id/textView_subtotal_cobranza"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="SALDO:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_cliente_nombre_cobranza_view" />

            <TextView
                android:id="@+id/textView_subtotal_cobranza_view"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="$0.00"
                app:layout_constraintStart_toEndOf="@+id/textView_subtotal_cobranza"
                app:layout_constraintTop_toBottomOf="@+id/textView_cliente_nombre_cobranza_view" />

            <TextView
                android:id="@+id/textView_impuesto_cobranza"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="ACUENTA:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_subtotal_cobranza" />

            <TextView
                android:id="@+id/textView_impuesto_cobranza_view"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="$0.00"
                app:layout_constraintStart_toEndOf="@+id/textView_impuesto_cobranza"
                app:layout_constraintTop_toBottomOf="@+id/textView_subtotal_cobranza_view" />

            <TextView
                android:id="@+id/textView_total_cobranza"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="RESTANTE:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_impuesto_cobranza" />

            <TextView
                android:id="@+id/textView_total_cobranza_view"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="$0.00"
                app:layout_constraintStart_toEndOf="@+id/textView_total_cobranza"
                app:layout_constraintTop_toBottomOf="@+id/textView_impuesto_cobranza_view" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fbAddDocumentos"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:clickable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_impuesto_venta_view"
                app:layout_constraintTop_toBottomOf="@+id/textView_cliente_nombre_venta_view"
                app:srcCompat="@drawable/ic_documento" />"
            app:layout_constraintStart_toEndOf="@+id/textView_impuesto_venta"
            app:layout_constraintTop_toBottomOf="@+id/textView_subtotal_venta_VIEW" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>