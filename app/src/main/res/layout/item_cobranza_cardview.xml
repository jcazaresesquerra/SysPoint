<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_venta_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Venta:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_venta_cobranza_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="45672"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_venta_cobranza"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_cobranza_cobranza_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="466352"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:visibility="gone"
                android:id="@+id/tv_cobranza_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Cobranza:"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_cobranza_cobranza_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_importe_cobranza"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Importe"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_venta_cobranza" />

            <TextView
                android:id="@+id/tv_importe_cobranza_view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="$1,563.99"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintStart_toEndOf="@+id/tv_importe_cobranza"
                app:layout_constraintTop_toBottomOf="@+id/tv_venta_cobranza_view" />

            <TextView
                android:id="@+id/tv_saldo_cobranza"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Saldo:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_importe_cobranza" />

            <TextView
                android:id="@+id/tv_saldo_cobranza_view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="$673.92"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintStart_toEndOf="@+id/tv_saldo_cobranza"
                app:layout_constraintTop_toBottomOf="@+id/tv_importe_cobranza_view" />

            <TextView
                android:id="@+id/tv_fecha_cobranza_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="20/06/2019"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_cobranza_cobranza_view" />

            <TextView
                android:id="@+id/tv_fecha_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Fecha:"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_fecha_cobranza_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_cobranza_cobranza" />

            <TextView
                android:id="@+id/tv_abono_cobranza"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="Abono:"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_saldo_cobranza" />

            <TextView
                android:id="@+id/tv_abono_cobranza_view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="$200.00"
                android:textAlignment="textEnd"
                android:textColor="@color/green_700"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/tv_abono_cobranza"
                app:layout_constraintTop_toBottomOf="@+id/tv_saldo_cobranza_view" />

            <TextView
                android:id="@+id/tv_saldo_nuevo_cobranza_view"
                android:layout_width="100dp"
                android:layout_height="19dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="$1,893.00"
                android:textAlignment="textEnd"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_saldo_cobranza_view" />

            <TextView
                android:id="@+id/tv_saldo_nuevo_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="N/Saldo"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/tv_saldo_nuevo_cobranza_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_saldo_cobranza_view" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>