<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:elevation="4dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_lista_cobranza_cliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="CLIENTE:"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lista_cobranza_cliente_view"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="*"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintStart_toEndOf="@+id/tv_lista_cobranza_cliente"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lista_cobranza_cliente_nombre_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="TextView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_lista_cobranza_cliente" />

            <TextView
                android:id="@+id/tv_lista_cobranza_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="Venta:"
                android:textColor="@color/red_900"
                app:layout_constraintEnd_toStartOf="@+id/tv_lista_cobranza_cobranza_view"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_lista_cobranza_cobranza_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="12345"
                android:textColor="@color/red_900"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/tv_lista_cobranza_tipo_cobranza"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:text="HORA:"
                android:textSize="12dp"
                app:layout_constraintEnd_toStartOf="@+id/tv_lista_cobranza_hora_cobranza_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_lista_cobranza_cliente_nombre_view" />

            <TextView
                android:id="@+id/tv_lista_cobranza_hora_cobranza_view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="12:00:00"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_lista_cobranza_cliente_nombre_view" />

            <TextView
                android:id="@+id/tv_lista_cobranza_fecha"
                android:layout_width="47dp"
                android:layout_height="17dp"
                android:layout_marginEnd="8dp"
                android:text="FECHA:"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/tv_lista_cobranza_fecha_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_lista_cobranza_tipo_cobranza" />

            <TextView
                android:id="@+id/tv_lista_cobranza_fecha_view"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="12/02/2018"
                android:textSize="12dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_lista_cobranza_hora_cobranza_view" />

            <TextView
                android:id="@+id/tv_lista_cobranza_importe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="TOTAL:"
                android:textColor="@color/purple_500"
                android:textSize="18sp"
                app:layout_constraintEnd_toStartOf="@+id/tv_lista_cobranza_importe_view"
                app:layout_constraintTop_toBottomOf="@+id/tv_lista_cobranza_fecha_view" />

            <TextView
                android:id="@+id/tv_lista_cobranza_importe_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="$1,234.54"
                android:textColor="@color/purple_700"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_lista_cobranza_fecha_view" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>